<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <EditTextPreference
        android:title="@string/yourName"
        android:key="username"
        android:summary="@string/EditTextPreferences"/>

    <CheckBoxPreference
        android:title="@string/AppUpdates"
        android:defaultValue="false"
        android:key="applicationUpdates"
        android:summary="@string/checkBoxSummary"/>

    <ListPreference
        android:title="@string/DownloadDetails"
        android:key="downloadType"
        android:defaultValue="1"
        android:summary="@string/ListPreferences"
        android:entries="@array/listArray"
        android:entryValues="@array/listValues"/>







</PreferenceScreen>